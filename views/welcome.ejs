<%- include('./partials/header')%>
<main class="container">
  <div>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Username</h5>

        <form action="/sign_in" method="POST" class="form-inline">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="cluckername"
              placeholder="e.g. Madam Welminster"
            />
          </div>
          <button type="submit" value="Sign in" class="btn btn-outline-success">
            Sign In
          </button>
        </form>
      </div>
    </div>
  </div>
  <%- include('./partials/footer') %>
</main>
